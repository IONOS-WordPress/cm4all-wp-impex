{
  "intelephense.files.exclude": [
    "**/.git/**",
    "**/.svn/**",
    "**/.hg/**",
    "**/CVS/**",
    "**/.DS_Store/**",
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**/{Tests,tests}/**",
    "**/.history/**",
    // "**/vendor/**/vendor/**",
    "**/dist/**"
  ],
  "git.ignoreLimitWarning": true,
  /*
  "json.schemas": [
    {
      "fileMatch": ["slice-*.json"],
      "url": "${workspaceFolder}/docs/jsonschema/slice-content.json"
    }
  ]
  */
  "[html]": {
    "editor.formatOnSave": false
  },
  "files.associations": {
    // prevent autoformatting of the homepage example files since it will inject unexpected linebreaks
    "packages/@cm4all-wp-impex/generator/examples/impex-complete-static-homepage-conversion/homepage-dr-mustermann/**/*.html": "html"
  }
}
